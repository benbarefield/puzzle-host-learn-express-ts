{
    "name": "puzzle-host-server",
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "js,ts"
        }
    },
    "scripts": {
        "prestart": "npm run build",
        "start": "concurrently --killOthers \"npm run watch\" \"npm run serve\"",
        "build": "rimraf ./dist && npx tsc",
        "watch": "npm-watch",
        "serve": "nodemon ./dist/index.js",
        "test": "jest --watch",
        "child-serve": "node ./dist/index.js"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-ws": "^5.0.2"
    },
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/express-ws": "^3.0.5",
        "@types/node": "^20.14.2",
        "@types/supertest": "^6.0.2",
        "concurrently": "^9.0.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.3",
        "npm-watch": "^0.13.0",
        "rimraf": "^6.0.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.4.5"
    }
}
